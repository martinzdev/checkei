{
  "rewrites": [
    {
      "source": "/views/app/(.*)",
      "destination": "/views/app/index.html"
    },
    {
      "source": "/views/about/(.*)",
      "destination": "/views/about/index.html"
    },
    {
      "source": "/views/contact/(.*)",
      "destination": "/views/contact/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|svg|png|jpg|jpeg|gif|ico|woff|woff2|ttf|eot))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}